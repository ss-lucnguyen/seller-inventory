@inherits LayoutComponentBase
@implements IDisposable

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">SellerInventer</MudText>
        <MudSpacer />

        <!-- Language Switcher -->
        <MudMenu Icon="@Icons.Material.Filled.Language" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight"
            TransformOrigin="Origin.TopRight">
            <MudMenuItem OnClick="@(() => SetLanguage(Language.ENG))">
                <div class="d-flex align-center gap-2">
                    <MudText>üá∫üá∏</MudText>
                    <MudText>English</MudText>
                    @if (_currentLanguage == Language.ENG)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Success" />
                    }
                </div>
            </MudMenuItem>
            <MudMenuItem OnClick="@(() => SetLanguage(Language.VIE))">
                <div class="d-flex align-center gap-2">
                    <MudText>üáªüá≥</MudText>
                    <MudText>Ti·∫øng Vi·ªát</MudText>
                    @if (_currentLanguage == Language.VIE)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Success" />
                    }
                </div>
            </MudMenuItem>
        </MudMenu>

        <AuthorizeView>
            <Authorized>
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="ml-2">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" />
                    <MudText Typo="Typo.body2">@context.User.Identity?.Name</MudText>
                    <MudButton Variant="Variant.Text" Color="Color.Inherit" Size="Size.Small" OnClick="@Logout"
                        StartIcon="@Icons.Material.Filled.Logout">
                        @L["Logout"]
                    </MudButton>
                </MudStack>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudDivider Class="my-2" />
                <MudStack Class="pa-3" Spacing="0">
                    <MudText Typo="Typo.caption" Color="Color.Secondary">@(_currentLanguage == Language.VIE ? "ƒêƒÉng nh·∫≠p v·ªõi" : "Logged in as")</MudText>
                    <MudText Typo="Typo.body2">@context.User.Identity?.Name</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                        @context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                    </MudText>
                </MudStack>
            </Authorized>
        </AuthorizeView>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject] private IAuthService AuthService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ILanguageService LanguageService { get; set; } = default!;
    [Inject] private ILocalizationService L { get; set; } = default!;

    private bool _drawerOpen = true;
    private Language _currentLanguage = Language.ENG;

    protected override async Task OnInitializedAsync()
    {
        await LanguageService.InitializeAsync();
        _currentLanguage = LanguageService.CurrentLanguage;
        LanguageService.OnLanguageChanged += OnLanguageChanged;
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }

    private async Task SetLanguage(Language language)
    {
        await LanguageService.SetLanguageAsync(language);
    }

    private void OnLanguageChanged()
    {
        _currentLanguage = LanguageService.CurrentLanguage;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LanguageService.OnLanguageChanged -= OnLanguageChanged;
    }
}
