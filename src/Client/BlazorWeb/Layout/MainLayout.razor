@inherits LayoutComponentBase
@implements IDisposable

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="ml-3">
            <MudText Typo="Typo.h6">Seller Inventory</MudText>
            @if (!string.IsNullOrEmpty(_storeName))
            {
                <MudChip T="string" Size="Size.Small" Color="Color.Secondary" Variant="Variant.Filled">
                    <MudIcon Icon="@Icons.Material.Filled.Store" Size="Size.Small" Class="mr-1" />
                    @_storeName
                </MudChip>
            }
        </MudStack>
        <MudSpacer />

        <!-- Language Switcher -->
        <MudMenu Icon="@Icons.Material.Filled.Language" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight"
            TransformOrigin="Origin.TopRight">
            <MudMenuItem OnClick="@(() => SetLanguage(Language.ENG))">
                <div class="d-flex align-center gap-2">
                    <MudText>ðŸ‡ºðŸ‡¸</MudText>
                    <MudText>English</MudText>
                    @if (_currentLanguage == Language.ENG)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Success" />
                    }
                </div>
            </MudMenuItem>
            <MudMenuItem OnClick="@(() => SetLanguage(Language.VIE))">
                <div class="d-flex align-center gap-2">
                    <MudText>ðŸ‡»ðŸ‡³</MudText>
                    <MudText>Tiáº¿ng Viá»‡t</MudText>
                    @if (_currentLanguage == Language.VIE)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Success" />
                    }
                </div>
            </MudMenuItem>
        </MudMenu>

        <AuthorizeView>
            <Authorized>
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="ml-2">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" />
                    <MudText Typo="Typo.body2">@context.User.Identity?.Name</MudText>
                    <MudButton Variant="Variant.Text" Color="Color.Inherit" Size="Size.Small" OnClick="@Logout"
                        StartIcon="@Icons.Material.Filled.Logout">
                        @L["Logout"]
                    </MudButton>
                </MudStack>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudPaper Class="ma-3 pa-3" Elevation="0" Style="background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%); border-radius: 12px;">
                    <MudStack Spacing="2">
                        @if (!string.IsNullOrEmpty(_storeName))
                        {
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                <MudAvatar Color="Color.Surface" Size="Size.Small" Style="background: rgba(255,255,255,0.2);">
                                    <MudIcon Icon="@Icons.Material.Filled.Store" Size="Size.Small" Style="color: white;" />
                                </MudAvatar>
                                <MudText Typo="Typo.subtitle2" Style="color: white; font-weight: 600;">@_storeName</MudText>
                            </MudStack>
                        }
                        <MudDivider Style="border-color: rgba(255,255,255,0.2);" />
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                            <MudAvatar Color="Color.Secondary" Size="Size.Medium">
                                @(context.User.Identity?.Name?.Substring(0, 1).ToUpper())
                            </MudAvatar>
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.body2" Style="color: white; font-weight: 500;">@context.User.Identity?.Name</MudText>
                                <MudChip T="string" Size="Size.Small" Style="background: rgba(255,255,255,0.2); color: white; font-size: 0.7rem; height: 20px;">
                                    @context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                                </MudChip>
                            </MudStack>
                        </MudStack>
                    </MudStack>
                </MudPaper>
            </Authorized>
        </AuthorizeView>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject] private IAuthService AuthService { get; set; } = default!;
    [Inject] private IStoreContext StoreContext { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ILanguageService LanguageService { get; set; } = default!;
    [Inject] private ILocalizationService L { get; set; } = default!;

    private bool _drawerOpen = true;
    private Language _currentLanguage = Language.ENG;
    private string? _storeName;

    protected override async Task OnInitializedAsync()
    {
        await LanguageService.InitializeAsync();
        _currentLanguage = LanguageService.CurrentLanguage;
        LanguageService.OnLanguageChanged += OnLanguageChanged;

        await StoreContext.InitializeAsync();
        _storeName = StoreContext.CurrentStoreName;
        StoreContext.OnStoreContextChanged += OnStoreContextChanged;
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }

    private async Task SetLanguage(Language language)
    {
        await LanguageService.SetLanguageAsync(language);
    }

    private void OnLanguageChanged()
    {
        _currentLanguage = LanguageService.CurrentLanguage;
        InvokeAsync(StateHasChanged);
    }

    private void OnStoreContextChanged()
    {
        _storeName = StoreContext.CurrentStoreName;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LanguageService.OnLanguageChanged -= OnLanguageChanged;
        StoreContext.OnStoreContextChanged -= OnStoreContextChanged;
    }
}
