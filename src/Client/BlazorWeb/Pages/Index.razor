@page "/"
@attribute [Authorize]
@implements IDisposable

<PageTitle>Dashboard - SellerInventory</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">@L["Dashboard"]</MudText>

@if (_isLoading)
{
    <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
}
else
{
    <MudGrid Spacing="3">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.8);">@L["TodaysOrders"]</MudText>
                    <MudText Typo="Typo.h4" Style="color: white; font-weight: 700;">@Lang.FormatNumber(_dailyReport?.TotalOrders ?? 0)</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.8);">@L["TodaysRevenue"]</MudText>
                    <MudText Typo="Typo.h4" Style="color: white; font-weight: 700;">@Lang.FormatCurrency(_dailyReport?.TotalRevenue ?? 0)</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.8);">@L["AverageOrderValue"]</MudText>
                    <MudText Typo="Typo.h4" Style="color: white; font-weight: 700;">@Lang.FormatCurrency(_dailyReport?.AverageOrderValue ?? 0)</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2" Style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.8);">@L["TotalProducts"]</MudText>
                    <MudText Typo="Typo.h4" Style="color: white; font-weight: 700;">@Lang.FormatNumber(_products.Count)</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudPaper Class="pa-4 mt-4" Elevation="2">
        <MudText Typo="Typo.h6" Class="mb-3">
            <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Class="mr-2" Style="vertical-align: middle;" />
            @L["TopSellingProductsToday"]
        </MudText>
        @if (_dailyReport?.TopSellingProducts?.Any() == true)
        {
            <MudSimpleTable Dense="true" Hover="true" Striped="true">
                <thead>
                    <tr>
                        <th>@L["Product"]</th>
                        <th>@L["QuantitySold"]</th>
                        <th>@L["Revenue"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in _dailyReport.TopSellingProducts)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>
                                <MudChip T="string" Size="Size.Small" Color="Color.Primary">@Lang.FormatNumber(product.QuantitySold)</MudChip>
                            </td>
                            <td>
                                <MudText Color="Color.Success">@Lang.FormatCurrency(product.Revenue)</MudText>
                            </td>
                        </tr>
                    }
                </tbody>
            </MudSimpleTable>
        }
        else
        {
            <MudAlert Severity="Severity.Info" Variant="Variant.Text">
                @L["NoSalesToday"]
            </MudAlert>
        }
    </MudPaper>
}

@code {
    [Inject] private IReportService ReportService { get; set; } = default!;
    [Inject] private IProductService ProductService { get; set; } = default!;
    [Inject] private ILanguageService Lang { get; set; } = default!;
    [Inject] private ILocalizationService L { get; set; } = default!;

    private DailySalesReport? _dailyReport;
    private IReadOnlyList<ProductResponse> _products = new List<ProductResponse>();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        Lang.OnLanguageChanged += OnLanguageChanged;
        try
        {
            _dailyReport = await ReportService.GetDailySalesAsync();
            _products = await ProductService.GetAllAsync();
        }
        catch
        {
            _dailyReport = new DailySalesReport(DateTime.Today, 0, 0, 0, new List<TopSellingProduct>());
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OnLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Lang.OnLanguageChanged -= OnLanguageChanged;
    }
}
