@page "/"
@attribute [Authorize]

<PageTitle>Dashboard - SellerInventer</PageTitle>

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
</div>

@if (_isLoading)
{
    <p>Loading...</p>
}
else
{
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">Today's Orders</div>
            <div class="stat-value">@_dailyReport?.TotalOrders</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Today's Revenue</div>
            <div class="stat-value">$@_dailyReport?.TotalRevenue.ToString("N2")</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Average Order Value</div>
            <div class="stat-value">$@_dailyReport?.AverageOrderValue.ToString("N2")</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Total Products</div>
            <div class="stat-value">@_products.Count</div>
        </div>
    </div>

    <div class="card">
        <h2 style="margin-bottom: 1rem;">Top Selling Products Today</h2>
        @if (_dailyReport?.TopSellingProducts.Any() == true)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity Sold</th>
                        <th>Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in _dailyReport.TopSellingProducts)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.QuantitySold</td>
                            <td>$@product.Revenue.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="color: var(--text-secondary);">No sales today</p>
        }
    </div>
}

@code {
    [Inject] private IReportService ReportService { get; set; } = default!;
    [Inject] private IProductService ProductService { get; set; } = default!;

    private DailySalesReport? _dailyReport;
    private IReadOnlyList<ProductResponse> _products = new List<ProductResponse>();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _dailyReport = await ReportService.GetDailySalesAsync();
            _products = await ProductService.GetAllAsync();
        }
        catch
        {
            _dailyReport = new DailySalesReport(DateTime.Today, 0, 0, 0, new List<TopSellingProduct>());
        }
        finally
        {
            _isLoading = false;
        }
    }
}
