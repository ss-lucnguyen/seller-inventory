@page "/pos"
@attribute [Authorize]

<PageTitle>POS - SellerInventer</PageTitle>

<div class="pos-container">
    <div class="pos-header">
        <h2>Point of Sale</h2>
    </div>

    <div class="pos-content">
        <div class="products-section">
            <div class="section-header">
                <h4>Products</h4>
                <DxComboBox Data="_categories"
                            TextFieldName="Name"
                            ValueFieldName="Id"
                            Value="_selectedCategoryId"
                            ValueChanged="@((Guid? value) => OnCategoryChanged(value))"
                            NullText="All Categories"
                            ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                            CssClass="category-filter" />
            </div>

            <div class="products-grid">
                @foreach (var product in _filteredProducts.Where(p => p.IsActive && p.StockQuantity > 0))
                {
                    <div class="product-card" @onclick="() => AddToCart(product)">
                        <div class="product-icon">
                            <span class="oi oi-box"></span>
                        </div>
                        <div class="product-name">@product.Name</div>
                        <div class="product-price">@product.SellPrice.ToString("C2")</div>
                        <div class="product-stock">
                            <span class="badge @(product.StockQuantity < 10 ? "bg-warning" : "bg-success")">
                                Stock: @product.StockQuantity
                            </span>
                        </div>
                    </div>
                }

                @if (!_filteredProducts.Any(p => p.IsActive && p.StockQuantity > 0))
                {
                    <div class="no-products">
                        <span class="oi oi-inbox"></span>
                        <p>No products available</p>
                    </div>
                }
            </div>
        </div>

        <div class="cart-section">
            <div class="cart-header">
                <h4><span class="oi oi-cart me-2"></span>Shopping Cart</h4>
                @if (_cartItems.Any())
                {
                    <span class="badge bg-primary">@_cartItems.Sum(i => i.Quantity) items</span>
                }
            </div>

            <div class="cart-body">
                @if (_cartItems.Any())
                {
                    <div class="cart-items">
                        @foreach (var item in _cartItems)
                        {
                            <div class="cart-item">
                                <div class="item-info">
                                    <div class="item-name">@item.ProductName</div>
                                    <div class="item-price">@item.UnitPrice.ToString("C2")</div>
                                </div>
                                <div class="item-controls">
                                    <div class="quantity-control">
                                        <button class="qty-btn" @onclick="() => UpdateQuantity(item, -1)">
                                            <span class="oi oi-minus"></span>
                                        </button>
                                        <span class="qty-value">@item.Quantity</span>
                                        <button class="qty-btn" @onclick="() => UpdateQuantity(item, 1)">
                                            <span class="oi oi-plus"></span>
                                        </button>
                                    </div>
                                    <div class="item-total">@((item.UnitPrice * item.Quantity).ToString("C2"))</div>
                                    <button class="remove-btn" @onclick="() => RemoveFromCart(item)">
                                        <span class="oi oi-trash"></span>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="cart-summary">
                        <div class="summary-row">
                            <span>Subtotal</span>
                            <span>@_subtotal.ToString("C2")</span>
                        </div>
                        <div class="summary-row">
                            <span>Tax (10%)</span>
                            <span>@_tax.ToString("C2")</span>
                        </div>
                        <div class="summary-row total">
                            <span>Total</span>
                            <span>@_total.ToString("C2")</span>
                        </div>
                    </div>

                    <DxButton Text="@(_isProcessing ? "Processing..." : "Complete Order")"
                              RenderStyle="ButtonRenderStyle.Success"
                              RenderStyleMode="ButtonRenderStyleMode.Contained"
                              CssClass="checkout-btn"
                              Enabled="!_isProcessing"
                              Click="ProcessOrder" />
                }
                else
                {
                    <div class="cart-empty">
                        <span class="oi oi-cart"></span>
                        <p>Cart is empty</p>
                        <small>Click on products to add them</small>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(_message))
            {
                <div class="cart-message @(_isSuccess ? "success" : "error")">
                    <span class="oi @(_isSuccess ? "oi-check" : "oi-warning")"></span>
                    @_message
                </div>
            }
        </div>
    </div>
</div>

