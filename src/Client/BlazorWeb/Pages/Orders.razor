@page "/orders"
@attribute [Authorize]
@implements IDisposable

<PageTitle>Orders - SellerInventory</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">@L["Orders"]</MudText>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="mb-4" />
}
else
{
    <MudPaper Elevation="2">
        <MudTable Items="_orders" Hover="true" Striped="true" Filter="new Func<OrderResponse, bool>(FilterFunc)">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@L["OrderList"]</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="_searchString" Placeholder="@L["SearchOrders"]" Adornment="Adornment.Start"
                    AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>
                    <MudTableSortLabel SortBy="new Func<OrderResponse, object>(x => x.OrderNumber)">@L["OrderNumber"]
                    </MudTableSortLabel>
                </MudTh>
                <MudTh>
                    <MudTableSortLabel SortBy="new Func<OrderResponse, object>(x => x.OrderDate)">@L["Date"]
                    </MudTableSortLabel>
                </MudTh>
                <MudTh>@L["Items"]</MudTh>
                <MudTh>
                    <MudTableSortLabel SortBy="new Func<OrderResponse, object>(x => x.Total)">@L["Total"]
                    </MudTableSortLabel>
                </MudTh>
                <MudTh>@L["Status"]</MudTh>
                <AuthorizeView Roles="Admin" Context="authContext">
                    <MudTh Style="width: 200px;">@L["Actions"]</MudTh>
                </AuthorizeView>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="@L["OrderNumber"]">
                    <MudText Typo="Typo.body2" Style="font-family: monospace;">@context.OrderNumber</MudText>
                </MudTd>
                <MudTd DataLabel="@L["Date"]">
                    <MudText Typo="Typo.body2">@Lang.FormatDate(context.OrderDate)</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">@context.OrderDate.ToString("HH:mm")</MudText>
                </MudTd>
                <MudTd DataLabel="@L["Items"]">
                    <MudButton Variant="Variant.Text" Size="Size.Small" OnClick="@(() => ShowOrderDetails(context))">
                        <MudChip T="string" Size="Size.Small" Color="Color.Default">@context.Items.Count @L["Items"]
                        </MudChip>
                    </MudButton>
                </MudTd>
                <MudTd DataLabel="@L["Total"]">
                    <MudText Typo="Typo.body1" Color="Color.Success" Style="font-weight: 600;">
                        @Lang.FormatCurrency(context.Total)</MudText>
                </MudTd>
                <MudTd DataLabel="@L["Status"]">
                    <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(context.Status)">
                        @GetLocalizedStatus(context.Status)</MudChip>
                </MudTd>
                <AuthorizeView Roles="SystemAdmin,Manager" Context="authContext">
                    <MudTd DataLabel="@L["Actions"]">
                        <MudSelect T="string" Value="@context.Status"
                            ValueChanged="@(value => UpdateStatus(context.Id, value))" Variant="Variant.Outlined"
                            Dense="true" Margin="Margin.Dense">
                            <MudSelectItem Value="@("Pending")">@L["Pending"]</MudSelectItem>
                            <MudSelectItem Value="@("Confirmed")">@L["Confirmed"]</MudSelectItem>
                            <MudSelectItem Value="@("Completed")">@L["Completed"]</MudSelectItem>
                            <MudSelectItem Value="@("Cancelled")">@L["Cancelled"]</MudSelectItem>
                        </MudSelect>
                    </MudTd>
                </AuthorizeView>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
            <NoRecordsContent>
                <MudText Align="Align.Center" Class="pa-4">@L["NoOrders"]</MudText>
            </NoRecordsContent>
        </MudTable>
    </MudPaper>
}

<!-- Order Details Dialog -->
<MudDialog @bind-Visible="_showDetailsModal" Options="_detailsDialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">@L["OrderDetails"] - @_selectedOrder?.OrderNumber</MudText>
    </TitleContent>
    <DialogContent>
        @if (_selectedOrder != null)
        {
            <MudStack Spacing="3">
                <MudPaper Elevation="0" Outlined="true" Class="pa-3">
                    <MudGrid>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["OrderNumber"]</MudText>
                            <MudText Typo="Typo.body2">@_selectedOrder.OrderNumber</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Date"]</MudText>
                            <MudText Typo="Typo.body2">@Lang.FormatDate(_selectedOrder.OrderDate)</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Status"]</MudText>
                            <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(_selectedOrder.Status)">
                                @GetLocalizedStatus(_selectedOrder.Status)
                            </MudChip>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Customer"]</MudText>
                            <MudText Typo="Typo.body2">@_selectedOrder.UserName</MudText>
                        </MudItem>
                    </MudGrid>
                </MudPaper>

                <MudText Typo="Typo.subtitle2">@L["OrderItems"]</MudText>
                <MudSimpleTable Dense="true" Hover="true">
                    <thead>
                        <tr>
                            <th>@L["Image"]</th>
                            <th>@L["ProductName"]</th>
                            <th>@L["Quantity"]</th>
                            <th>@L["UnitPrice"]</th>
                            <th>@L["Total"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _selectedOrder.Items)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <MudAvatar Size="Size.Medium" Rounded="true" Style="border: 1px solid #e0e0e0;">
                                            <MudImage Src="@item.ImageUrl" Alt="@item.ProductName"
                                                Style="width: 100%; height: 100%; object-fit: cover;" />
                                        </MudAvatar>
                                    }
                                    else
                                    {
                                        <MudAvatar Size="Size.Medium" Rounded="true" Color="Color.Default">
                                            <MudIcon Icon="@Icons.Material.Filled.Inventory2" />
                                        </MudAvatar>
                                    }
                                </td>
                                <td>
                                    <MudText Typo="Typo.body2">@item.ProductName</MudText>
                                </td>
                                <td>
                                    <MudText Typo="Typo.body2">@item.Quantity</MudText>
                                </td>
                                <td>
                                    <MudText Typo="Typo.body2">@Lang.FormatCurrency(item.UnitPrice)</MudText>
                                </td>
                                <td>
                                    <MudText Typo="Typo.body2" Color="Color.Success" Style="font-weight: 600;">
                                        @Lang.FormatCurrency(item.TotalPrice)
                                    </MudText>
                                </td>
                            </tr>
                        }
                    </tbody>
                </MudSimpleTable>

                <MudPaper Elevation="0" Outlined="true" Class="pa-3" Style="background: rgba(0,0,0,0.02);">
                    <MudGrid>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Subtotal"]</MudText>
                            <MudText Typo="Typo.body2">@Lang.FormatCurrency(_selectedOrder.SubTotal)</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Tax"]</MudText>
                            <MudText Typo="Typo.body2">@Lang.FormatCurrency(_selectedOrder.Tax)</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Discount"]</MudText>
                            <MudText Typo="Typo.body2">@Lang.FormatCurrency(_selectedOrder.Discount)</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Total"]</MudText>
                            <MudText Typo="Typo.body1" Color="Color.Success" Style="font-weight: 600;">
                                @Lang.FormatCurrency(_selectedOrder.Total)
                            </MudText>
                        </MudItem>
                    </MudGrid>
                </MudPaper>

                @if (!string.IsNullOrEmpty(_selectedOrder.Notes))
                {
                    <MudPaper Elevation="0" Outlined="true" Class="pa-3">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">@L["Notes"]</MudText>
                        <MudText Typo="Typo.body2">@_selectedOrder.Notes</MudText>
                    </MudPaper>
                }
            </MudStack>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDetailsModal" Color="Color.Default">@L["Close"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Inject] private IOrderService OrderService { get; set; } = default!;
    [Inject] private ILanguageService Lang { get; set; } = default!;
    [Inject] private ILocalizationService L { get; set; } = default!;
    [CascadingParameter] private Task<AuthenticationState> AuthState { get; set; } = default!;

    private IReadOnlyList<OrderResponse> _orders = new List<OrderResponse>();
    private bool _isLoading = true;
    private bool _isAdmin;
    private string _searchString = string.Empty;
    private bool _showDetailsModal;
    private OrderResponse? _selectedOrder;
    private DialogOptions _detailsDialogOptions = new() { FullWidth = true, MaxWidth = MaxWidth.Medium };

    protected override async Task OnInitializedAsync()
    {
        Lang.OnLanguageChanged += OnLanguageChanged;
        var state = await AuthState;
        _isAdmin = state.User.IsInRole("SystemAdmin") || state.User.IsInRole("Manager");
        await LoadData();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _orders = _isAdmin
        ? await OrderService.GetAllAsync()
        : await OrderService.GetMyOrdersAsync();
        _isLoading = false;
    }

    private bool FilterFunc(OrderResponse order)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;
        if (order.OrderNumber.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (order.Status.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    private async Task UpdateStatus(Guid orderId, string? status)
    {
        if (string.IsNullOrEmpty(status)) return;
        await OrderService.UpdateStatusAsync(orderId, new UpdateOrderStatusRequest(status));
        await LoadData();
    }

    private void ShowOrderDetails(OrderResponse order)
    {
        _selectedOrder = order;
        _showDetailsModal = true;
    }

    private void CloseDetailsModal()
    {
        _showDetailsModal = false;
        _selectedOrder = null;
    }

    private Color GetStatusColor(string status) => status switch
    {
        "Completed" => Color.Success,
        "Cancelled" => Color.Error,
        "Confirmed" => Color.Info,
        _ => Color.Warning
    };

    private string GetLocalizedStatus(string status) => status switch
    {
        "Pending" => L["Pending"],
        "Confirmed" => L["Confirmed"],
        "Completed" => L["Completed"],
        "Cancelled" => L["Cancelled"],
        _ => status
    };

    private void OnLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Lang.OnLanguageChanged -= OnLanguageChanged;
    }
}
